<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/nac_card"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:contentPaddingTop="@dimen/normal"
	app:contentPaddingBottom="@dimen/normal"
	app:contentPaddingLeft="@dimen/normal"
	app:contentPaddingRight="@dimen/normal"
	app:cardBackgroundColor="?attr/colorCard">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:animateLayoutChanges="true">

		<!-- Progress indicator -->
		<com.google.android.material.progressindicator.CircularProgressIndicator
			style="@style/Timer.CardCircularProgressIndicator"
			android:id="@+id/timer_progress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			/>

		<!-- Name -->
		<TextView
			style="@style/Widget.TextView.Summary"
			android:id="@+id/timer_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/normal"
			android:textSize="@dimen/tsz_normal"
			android:text=""
			app:layout_constraintBottom_toTopOf="@id/timer_seconds"
			app:layout_constraintStart_toStartOf="@id/timer_progress"
			app:layout_constraintEnd_toEndOf="@id/timer_progress"
			/>

		<!-- Hour -->
		<TextView
			style="@style/Timer.CardTimeText"
			android:id="@+id/timer_hour"
			app:layout_constraintTop_toTopOf="@id/timer_progress"
			app:layout_constraintBottom_toBottomOf="@id/timer_progress"
			app:layout_constraintStart_toStartOf="@id/timer_progress"
			app:layout_constraintEnd_toStartOf="@id/timer_hour_units"
			app:layout_constraintHorizontal_chainStyle="packed"
			/>

		<TextView
			style="@style/Timer.UnitsText"
			android:id="@+id/timer_hour_units"
			android:layout_marginEnd="@dimen/tiny"
			android:text="@string/letter_h"
			app:layout_constraintStart_toEndOf="@id/timer_hour"
			app:layout_constraintEnd_toStartOf="@id/timer_minute"
			app:layout_constraintBaseline_toBaselineOf="@id/timer_hour"
			/>

		<!-- Minute -->
		<TextView
			style="@style/Timer.CardTimeText"
			android:id="@+id/timer_minute"
			app:layout_constraintTop_toTopOf="@id/timer_progress"
			app:layout_constraintBottom_toBottomOf="@id/timer_progress"
			app:layout_constraintStart_toEndOf="@id/timer_hour_units"
			app:layout_constraintEnd_toStartOf="@id/timer_minute_units"
			/>

		<TextView
			style="@style/Timer.UnitsText"
			android:id="@+id/timer_minute_units"
			android:layout_marginEnd="@dimen/tiny"
			android:text="@string/letter_m"
			app:layout_constraintStart_toEndOf="@id/timer_minute"
			app:layout_constraintEnd_toStartOf="@id/timer_seconds"
			app:layout_constraintBaseline_toBaselineOf="@id/timer_minute"
			/>

		<!-- Seconds -->
		<TextView
			style="@style/Timer.CardTimeText"
			android:id="@+id/timer_seconds"
			app:layout_constraintTop_toTopOf="@id/timer_progress"
			app:layout_constraintBottom_toBottomOf="@id/timer_progress"
			app:layout_constraintStart_toEndOf="@id/timer_minute_units"
			app:layout_constraintEnd_toStartOf="@id/timer_seconds_units"
			/>

		<TextView
			style="@style/Timer.UnitsText"
			android:id="@+id/timer_seconds_units"
			android:layout_marginEnd="@dimen/zero"
			android:text="@string/letter_s"
			app:layout_constraintStart_toEndOf="@id/timer_seconds"
			app:layout_constraintEnd_toEndOf="@id/timer_progress"
			app:layout_constraintBaseline_toBaselineOf="@id/timer_seconds"
			/>

		<!-- Reset timer -->
		<com.google.android.material.button.MaterialButton
			style="@style/Timer.IconButton"
			android:id="@+id/timer_reset_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/normal"
			android:visibility="gone"
			app:iconSize="@dimen/isz_large"
			app:icon="@drawable/autorenew_32"
			app:layout_constraintHorizontal_chainStyle="packed"
			app:layout_constraintTop_toBottomOf="@id/timer_seconds"
			app:layout_constraintBottom_toBottomOf="@id/timer_progress"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toStartOf="@id/timer_start_button"
			/>

		<!-- Start button-->
		<com.google.android.material.button.MaterialButton
			style="@style/Timer.IconButton"
			android:id="@+id/timer_start_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/normal"
			app:iconSize="@dimen/isz_large"
			app:icon="@drawable/play"
			app:layout_constraintTop_toBottomOf="@id/timer_seconds"
			app:layout_constraintBottom_toBottomOf="@id/timer_progress"
			app:layout_constraintStart_toEndOf="@id/timer_reset_button"
			app:layout_constraintEnd_toEndOf="parent"
			/>

		<!-- Pause button-->
		<com.google.android.material.button.MaterialButton
			style="@style/Timer.IconButton"
			android:id="@+id/timer_pause_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="invisible"
			app:iconSize="@dimen/isz_large"
			app:icon="@drawable/pause_32"
			app:layout_constraintTop_toTopOf="@id/timer_start_button"
			app:layout_constraintBottom_toBottomOf="@id/timer_start_button"
			app:layout_constraintStart_toStartOf="@id/timer_start_button"
			app:layout_constraintEnd_toEndOf="@id/timer_start_button"
			/>

		<!-- Stop timer -->
		<com.google.android.material.button.MaterialButton
			style="@style/Timer.IconButton"
			android:id="@+id/timer_stop_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/normal"
			android:visibility="invisible"
			app:iconSize="@dimen/isz_large"
			app:icon="@drawable/stop_32"
			app:layout_constraintTop_toBottomOf="@id/timer_seconds"
			app:layout_constraintBottom_toBottomOf="@id/timer_progress"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			/>

		<!-- Scan NFC tag -->
		<ImageView
			android:id="@+id/timer_scan_nfc_icon"
			android:contentDescription="@string/cd_scan_nfc"
			android:layout_width="@dimen/isz_medium"
			android:layout_height="@dimen/isz_medium"
			android:layout_marginBottom="@dimen/normal"
			android:src="@drawable/tap_and_play"
			android:visibility="invisible"
			app:layout_constraintTop_toBottomOf="@id/timer_seconds"
			app:layout_constraintBottom_toBottomOf="@id/timer_progress"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			/>

	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>