<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/nac_card"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:contentPaddingTop="@dimen/small"
	app:contentPaddingBottom="@dimen/tiny"
	app:contentPaddingLeft="@dimen/medium"
	app:contentPaddingRight="@dimen/medium"
	app:cardBackgroundColor="?attr/colorCard">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/twoline"
		android:layout_marginEnd="@dimen/twoline">

		<!-- Hour -->
		<TextView
			style="@style/Timer.CardTimeText"
			android:id="@+id/timer_hour"
			android:textSize="@dimen/tsz_attention"
			android:text="@string/number00"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="@id/timer_seconds"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toStartOf="@id/timer_hour_units"
			app:layout_constraintHorizontal_chainStyle="packed"
			/>

		<TextView
			style="@style/Timer.UnitsText"
			android:id="@+id/timer_hour_units"
			android:layout_marginEnd="@dimen/tiny"
			android:text="@string/letter_h"
			app:layout_constraintStart_toEndOf="@id/timer_hour"
			app:layout_constraintEnd_toStartOf="@id/timer_minute"
			app:layout_constraintBaseline_toBaselineOf="@id/timer_hour"
			/>

		<!-- Minute -->
		<TextView
			style="@style/Timer.CardTimeText"
			android:id="@+id/timer_minute"
			android:textSize="@dimen/tsz_attention"
			android:text="@string/number00"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="@id/timer_seconds"
			app:layout_constraintStart_toEndOf="@id/timer_hour_units"
			app:layout_constraintEnd_toStartOf="@id/timer_minute_units"
			/>

		<TextView
			style="@style/Timer.UnitsText"
			android:id="@+id/timer_minute_units"
			android:layout_marginEnd="@dimen/tiny"
			android:text="@string/letter_m"
			app:layout_constraintStart_toEndOf="@id/timer_minute"
			app:layout_constraintEnd_toStartOf="@id/timer_seconds"
			app:layout_constraintBaseline_toBaselineOf="@id/timer_minute"
			/>

		<!-- Seconds -->
		<TextView
			style="@style/Timer.CardTimeText"
			android:id="@+id/timer_seconds"
			android:textSize="@dimen/tsz_attention"
			android:text="@string/number00"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toTopOf="@id/timer_name"
			app:layout_constraintStart_toEndOf="@id/timer_minute_units"
			app:layout_constraintEnd_toStartOf="@id/timer_seconds_units"
			/>

		<TextView
			style="@style/Timer.UnitsText"
			android:id="@+id/timer_seconds_units"
			android:layout_marginEnd="@dimen/zero"
			android:text="@string/letter_s"
			app:layout_constraintStart_toEndOf="@id/timer_seconds"
			app:layout_constraintBaseline_toBaselineOf="@id/timer_seconds"
			/>

		<!-- Repeat frequency -->
		<TextView
			style="@style/Widget.TextView.Summary"
			android:id="@+id/timer_repeat_frequency"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/nudge"
			android:layout_marginEnd="@dimen/tiny"
			android:text="1x"
			app:layout_constraintHorizontal_bias="0"
			app:layout_constraintHorizontal_chainStyle="packed"
			app:layout_goneMarginStart="@dimen/nudge"
			app:layout_constraintTop_toBottomOf="@id/timer_seconds"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toStartOf="@id/timer_name"
			/>

		<!-- Name -->
		<TextView
			style="@style/Widget.TextView.Summary"
			android:id="@+id/timer_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/normal"
			android:text="Hello"
			app:layout_constraintTop_toBottomOf="@id/timer_seconds"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="@id/timer_repeat_frequency"
			app:layout_constraintEnd_toStartOf="@id/timer_name_guideline"
			app:layout_constraintHorizontal_bias="0"
			/>

		<!-- Guideline -->
		<androidx.constraintlayout.widget.Guideline
			android:id="@+id/timer_name_guideline"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_end="@dimen/touch"
			/>

		<!-- Start button-->
		<Button
			style="@style/Timer.IconButton"
			android:id="@+id/timer_start_button"
			android:layout_width="@dimen/touch"
			android:layout_height="@dimen/touch"
			android:backgroundTint="?attr/colorAccent"
			app:iconSize="@dimen/isz_large"
			app:icon="@drawable/play"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			/>

		<!-- Pause button-->
		<Button
			style="@style/Timer.IconButton"
			android:id="@+id/timer_pause_button"
			android:layout_width="@dimen/touch"
			android:layout_height="@dimen/touch"
			android:backgroundTint="@color/gray_dark2"
			app:iconSize="@dimen/isz_large"
			app:icon="@drawable/pause_32"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:visibility="invisible"
			/>

	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>