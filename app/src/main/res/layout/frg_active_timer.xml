<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<!-- Progress indicator -->
	<com.google.android.material.progressindicator.CircularProgressIndicator
		style="@style/My.Timer.CircularProgressIndicator.Active"
		android:id="@+id/timer_progress"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintVertical_bias="0.2"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		/>

	<!-- Name -->
	<TextView
		style="@style/My.Timer.NameText.Active"
		android:id="@+id/timer_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text=""
		app:layout_constraintBottom_toTopOf="@id/timer_seconds"
		app:layout_constraintStart_toStartOf="@id/timer_progress"
		app:layout_constraintEnd_toEndOf="@id/timer_progress"
		/>

	<!-- Hour -->
	<TextView
		style="@style/My.Timer.TimeText.Active"
		android:id="@+id/timer_hour"
		android:text="@string/number00"
		app:layout_constraintTop_toTopOf="@id/timer_progress"
		app:layout_constraintBottom_toBottomOf="@id/timer_progress"
		app:layout_constraintStart_toStartOf="@id/timer_progress"
		app:layout_constraintEnd_toStartOf="@id/timer_hour_units"
		app:layout_constraintHorizontal_chainStyle="packed"
		/>

	<TextView
		style="@style/My.Timer.UnitsText"
		android:id="@+id/timer_hour_units"
		android:layout_marginEnd="@dimen/tiny"
		android:text="@string/letter_h"
		app:layout_constraintStart_toEndOf="@id/timer_hour"
		app:layout_constraintEnd_toStartOf="@id/timer_minute"
		app:layout_constraintBaseline_toBaselineOf="@id/timer_hour"
		/>

	<!-- Minute -->
	<TextView
		style="@style/My.Timer.TimeText.Active"
		android:id="@+id/timer_minute"
		android:text="@string/number00"
		app:layout_constraintTop_toTopOf="@id/timer_progress"
		app:layout_constraintBottom_toBottomOf="@id/timer_progress"
		app:layout_constraintStart_toEndOf="@id/timer_hour_units"
		app:layout_constraintEnd_toStartOf="@id/timer_minute_units"
		/>

	<TextView
		style="@style/My.Timer.UnitsText"
		android:id="@+id/timer_minute_units"
		android:layout_marginEnd="@dimen/tiny"
		android:text="@string/letter_m"
		app:layout_constraintStart_toEndOf="@id/timer_minute"
		app:layout_constraintEnd_toStartOf="@id/timer_seconds"
		app:layout_constraintBaseline_toBaselineOf="@id/timer_minute"
		/>

	<!-- Seconds -->
	<TextView
		style="@style/My.Timer.TimeText.Active"
		android:id="@+id/timer_seconds"
		android:text="@string/number00"
		app:layout_constraintTop_toTopOf="@id/timer_progress"
		app:layout_constraintBottom_toBottomOf="@id/timer_progress"
		app:layout_constraintStart_toEndOf="@id/timer_minute_units"
		app:layout_constraintEnd_toStartOf="@id/timer_seconds_units"
		/>

	<TextView
		style="@style/My.Timer.UnitsText"
		android:id="@+id/timer_seconds_units"
		android:layout_marginEnd="@dimen/zero"
		android:text="@string/letter_s"
		app:layout_constraintStart_toEndOf="@id/timer_seconds"
		app:layout_constraintEnd_toEndOf="@id/timer_progress"
		app:layout_constraintBaseline_toBaselineOf="@id/timer_seconds"
		/>

	<!-- Reset timer -->
	<com.google.android.material.button.MaterialButton
		style="@style/My.Timer.IconButton"
		android:id="@+id/timer_reset_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/normal"
		app:iconSize="@dimen/isz_xlarge"
		app:icon="@drawable/autorenew_32"
		app:layout_constraintTop_toBottomOf="@id/timer_seconds"
		app:layout_constraintBottom_toBottomOf="@id/timer_progress"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		/>

	<!-- Resume timer -->
	<com.google.android.material.button.MaterialButton
		style="@style/My.Timer.ActionButton"
		android:id="@+id/timer_resume_button"
		android:layout_marginTop="@dimen/zero"
		android:layout_marginBottom="@dimen/zero"
		android:backgroundTint="?attr/colorAccent"
		android:visibility="invisible"
		app:iconGravity="textStart"
		app:iconPadding="@dimen/zero"
		app:iconSize="@dimen/isz_xxxlarge"
		app:icon="@drawable/play"
		app:layout_constraintTop_toBottomOf="@id/timer_progress"
		app:layout_constraintBottom_toTopOf="@id/timer_add_5s"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		/>

	<!-- Pause timer -->
	<com.google.android.material.button.MaterialButton
		style="@style/My.Timer.ActionButton"
		android:id="@+id/timer_pause_button"
		android:layout_marginTop="@dimen/zero"
		android:layout_marginBottom="@dimen/zero"
		android:backgroundTint="?attr/colorAccent"
		app:iconGravity="textStart"
		app:iconPadding="@dimen/zero"
		app:iconSize="@dimen/isz_xxxlarge"
		app:icon="@drawable/pause_32"
		app:layout_constraintTop_toTopOf="@id/timer_resume_button"
		app:layout_constraintBottom_toBottomOf="@id/timer_resume_button"
		app:layout_constraintStart_toStartOf="@id/timer_resume_button"
		app:layout_constraintEnd_toEndOf="@id/timer_resume_button"
		/>

	<!-- Stop timer -->
	<com.google.android.material.button.MaterialButton
		style="@style/My.Timer.ActionButton"
		android:id="@+id/timer_stop_button"
		android:layout_marginTop="@dimen/zero"
		android:layout_marginBottom="@dimen/zero"
		android:backgroundTint="?attr/colorAccent"
		android:visibility="invisible"
		app:iconGravity="textStart"
		app:iconPadding="@dimen/zero"
		app:iconSize="@dimen/isz_xxxlarge"
		app:icon="@drawable/stop_32"
		app:layout_constraintTop_toBottomOf="@id/timer_progress"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		/>

	<!-- Scan NFC -->
	<LinearLayout
		android:id="@+id/timer_scan_nfc_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/normal"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:visibility="invisible"
		android:animateLayoutChanges="true"
		app:layout_constraintTop_toBottomOf="@id/timer_progress"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		tools:ignore="UseCompoundDrawables">

		<ImageView
			android:contentDescription="@string/cd_scan_nfc"
			android:layout_width="@dimen/isz_focus"
			android:layout_height="@dimen/isz_focus"
			android:layout_marginStart="@dimen/nudge"
			android:src="@drawable/tap_and_play"
			/>

		<TextView
			android:id="@+id/timer_scan_nfc_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/small"
			android:ellipsize="end"
			android:maxLines="2"
			android:textAlignment="center"
			android:textColor="@color/white"
			android:textSize="@dimen/tsz_large"
			android:textStyle="bold"
			android:text=""
			/>
	</LinearLayout>

	<!-- Add time -->
	<com.google.android.material.button.MaterialButton
		style="@style/My.Timer.NumberpadButton"
		android:id="@+id/timer_add_1m"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/touch"
		android:layout_marginTop="@dimen/zero"
		android:layout_marginBottom="@dimen/zero"
		android:textSize="@dimen/tsz_medium"
		android:text="@string/timer_add_1min"
		app:layout_constraintTop_toBottomOf="@id/timer_resume_button"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@id/timer_add_30s"
		app:layout_constraintHorizontal_chainStyle="packed"
		/>

	<com.google.android.material.button.MaterialButton
		style="@style/My.Timer.NumberpadButton"
		android:id="@+id/timer_add_30s"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/touch"
		android:layout_marginTop="@dimen/zero"
		android:layout_marginBottom="@dimen/zero"
		android:layout_marginStart="@dimen/normal"
		android:layout_marginEnd="@dimen/normal"
		android:textSize="@dimen/tsz_medium"
		android:text="@string/timer_add_30sec"
		app:layout_constraintTop_toBottomOf="@id/timer_resume_button"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@id/timer_add_1m"
		app:layout_constraintEnd_toEndOf="@id/timer_add_5s"
		/>

	<com.google.android.material.button.MaterialButton
		style="@style/My.Timer.NumberpadButton"
		android:id="@+id/timer_add_5s"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/touch"
		android:layout_marginTop="@dimen/zero"
		android:layout_marginBottom="@dimen/zero"
		android:textSize="@dimen/tsz_medium"
		android:text="@string/timer_add_5sec"
		app:layout_constraintTop_toBottomOf="@id/timer_resume_button"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@id/timer_add_30s"
		app:layout_constraintEnd_toEndOf="parent"
		/>

</androidx.constraintlayout.widget.ConstraintLayout>