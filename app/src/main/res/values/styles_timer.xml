<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Icon button -->
	<style name="My.Timer.IconButton" parent="Widget.Material3.Button.IconButton">
		<item name="android:insetTop">@dimen/zero</item>
		<item name="android:insetBottom">@dimen/zero</item>
		<item name="android:insetLeft">@dimen/zero</item>
		<item name="android:insetRight">@dimen/zero</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
		<item name="iconGravity">textStart</item>
		<item name="iconPadding">@dimen/zero</item>
		<item name="iconSize">@dimen/isz_medium</item>
		<item name="iconTint">@color/white</item>
	</style>

	<!-- Circular progress -->
	<style name="My.Timer.CircularProgressIndicator" parent="">
		<item name="android:indeterminate">false</item>
		<item name="android:progress">0</item>
		<item name="indicatorDirectionCircular">clockwise</item>
		<item name="trackCornerRadius">4dp</item>
		<item name="trackThickness">6dp</item>
		<item name="trackColor">@color/gray</item>
	</style>

	<!-- Active circular progress -->
	<style name="My.Timer.CircularProgressIndicator.Active" parent="My.Timer.CircularProgressIndicator">
		<item name="indicatorSize">320dp</item>
		<item name="trackThickness">8dp</item>
		<item name="layout_constraintVertical_bias">0.2</item>
	</style>

	<!-- Card circular progress -->
	<style name="My.Timer.CircularProgressIndicator.Card" parent="My.Timer.CircularProgressIndicator">
		<item name="indicatorSize">260dp</item>
	</style>

	<!-- Name text -->
	<style name="My.Timer.NameText.Active" parent="Widget.TextView.Summary">
		<item name="android:layout_marginBottom">@dimen/large</item>
		<item name="android:layout_marginStart">@dimen/xxxlarge</item>
		<item name="android:layout_marginEnd">@dimen/xxxlarge</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textAlignment">center</item>
		<item name="android:textSize">@dimen/tsz_large</item>
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Card name text -->
	<style name="My.Timer.NameText.Card" parent="My.Timer.NameText.Active">
		<item name="android:textSize">@dimen/tsz_normal</item>
	</style>

	<!-- Time text -->
	<style name="My.Timer.TimeText.Active" parent="">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_dummy</item>
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Card time text -->
	<style name="My.Timer.TimeText.Card" parent="My.Timer.TimeText.Active">
		<item name="android:textSize">@dimen/tsz_xxhuge</item>
		<item name="android:textStyle">bold</item>
		<item name="android:text">@string/number00</item>
	</style>

	<!-- Units text -->
	<style name="My.Timer.UnitsText" parent="">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginStart">@dimen/twoline</item>
		<item name="android:layout_marginEnd">@dimen/normal</item>
		<item name="android:textSize">@dimen/tsz_large</item>
	</style>

	<!-- Numberpad container -->
	<style name="My.Timer.NumberpadContainer" parent="">
		<item name="android:layout_marginBottom">@dimen/huge</item>
	</style>

	<!-- Numberpad button -->
	<style name="My.Timer.NumberpadButton" parent="">
		<item name="android:layout_width">@dimen/isz_numpad</item>
		<item name="android:layout_height">@dimen/isz_numpad</item>
		<item name="android:layout_marginTop">@dimen/tiny</item>
		<item name="android:layout_marginBottom">@dimen/tiny</item>
		<item name="android:layout_marginStart">@dimen/tiny</item>
		<item name="android:layout_marginEnd">@dimen/tiny</item>
		<item name="android:backgroundTint">@color/gray_dark2</item>
		<item name="android:textSize">@dimen/tsz_xlarge</item>
		<item name="android:insetTop">@dimen/zero</item>
		<item name="android:insetBottom">@dimen/zero</item>
		<item name="android:insetLeft">@dimen/zero</item>
		<item name="android:insetRight">@dimen/zero</item>
	</style>

	<!-- Numberpad delete button -->
	<style name="My.Timer.NumberpadDeleteButton" parent="My.Timer.NumberpadButton">
		<item name="iconGravity">textStart</item>
		<item name="iconPadding">@dimen/zero</item>
		<item name="iconSize">@dimen/isz_normal</item>
	</style>

	<!-- Action button -->
	<style name="My.Timer.ActionButton" parent="My.Timer.NumberpadButton">
		<item name="android:layout_width">@dimen/isz_actionpad</item>
		<item name="android:layout_height">@dimen/isz_actionpad</item>
		<item name="iconGravity">textStart</item>
		<item name="iconPadding">@dimen/zero</item>
		<item name="iconSize">@dimen/isz_xxxlarge</item>
	</style>

	<!-- Add time button -->
	<style name="My.Timer.AddTimeButton" parent="My.Timer.NumberpadButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">@dimen/touch</item>
		<item name="android:layout_marginTop">@dimen/zero</item>
		<item name="android:layout_marginBottom">@dimen/zero</item>
		<item name="android:textSize">@dimen/tsz_medium</item>
	</style>

	<!-- Button inside timer -->
	<style name="My.Timer.IconButton.InsideTimer" parent="My.Timer.IconButton">
		<item name="android:layout_marginBottom">@dimen/normal</item>
	</style>

	<!-- Active button inside timer -->
	<style name="My.Timer.IconButton.InsideTimer.Active" parent="My.Timer.IconButton.InsideTimer">
		<item name="iconSize">@dimen/isz_xlarge</item>
	</style>

	<!-- Card button inside timer -->
	<style name="My.Timer.IconButton.InsideTimer.Card" parent="My.Timer.IconButton.InsideTimer">
		<item name="iconSize">@dimen/isz_xlarge</item>
	</style>

	<!-- NFC icon -->
	<style name="My.Timer.NfcIcon" parent="" />

	<style name="My.Timer.NfcIcon.Active" parent="My.Timer.NfcIcon">
		<item name="android:layout_width">@dimen/isz_focus</item>
		<item name="android:layout_height">@dimen/isz_focus</item>
		<item name="android:layout_marginStart">@dimen/nudge</item>
	</style>

	<style name="My.Timer.NfcIcon.Card" parent="My.Timer.NfcIcon">
		<item name="android:layout_width">@dimen/isz_large</item>
		<item name="android:layout_height">@dimen/isz_large</item>
		<item name="android:layout_marginBottom">@dimen/normal</item>
	</style>

	<!-- NFC text -->
	<style name="My.Timer.NfcText" parent="" />

	<style name="My.Timer.NfcText.Active" parent="My.Timer.NfcText">
		<item name="android:layout_marginTop">@dimen/small</item>
		<item name="android:textSize">@dimen/tsz_large</item>
	</style>

	<!-- Extra button -->
	<style name="My.Timer.ExtraButton" parent="My.Timer.IconButton">
		<item name="android:alpha">0.5</item>
		<item name="android:padding">@dimen/large</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
		<item name="iconPadding">@dimen/nudge</item>
		<item name="iconSize">@dimen/isz_medium</item>
	</style>

	<!-- More button -->
	<style name="My.Timer.MoreButton" parent="My.Timer.ExtraButton">
		<item name="android:layout_marginStart">@dimen/small</item>
		<item name="iconPadding">@dimen/nudge</item>
		<item name="iconSize">@dimen/isz_medium</item>
	</style>

	<!-- Save button -->
	<style name="My.Timer.SaveButton" parent="My.Timer.ExtraButton">
		<item name="android:layout_marginEnd">@dimen/small</item>
		<item name="iconPadding">@dimen/tiny</item>
		<item name="iconSize">@dimen/isz_normal</item>
	</style>

</resources>