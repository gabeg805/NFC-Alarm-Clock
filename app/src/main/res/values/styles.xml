<resources>

	<!-- Base application theme. -->
	<style name="BaseAppTheme" parent="Theme.Material3.Dark">
		<item name="android:statusBarColor">@color/black</item>

		<item name="colorAccent">@color/orange</item>
		<item name="colorError">@color/red</item>
		<item name="colorOnPrimary">@color/white</item>
		<item name="colorOnSecondary">@color/black</item>
		<item name="colorOnBackground">@color/white</item>
		<item name="colorOnSurface">@color/white</item>
		<item name="colorOnError">@color/white</item>

		<!--
		This was not working for some reason
		<item name="chipStyle">@style/Widget.TimePickerChipStyle</item>
		<item name="materialClockStyle">@style/Widget.TimePickerClockStyle</item>

		-->

		<item name="android:timePickerDialogTheme">@style/Widget.TimePickerTheme</item>

		<item name="snackbarStyle">@style/Widget.Snackbar</item>
		<item name="snackbarTextViewStyle">@style/Widget.SnackbarText</item>
		<item name="snackbarButtonStyle">@style/Widget.SnackbarButton</item>

		<!-- Card -->
		<item name="colorCard">@color/gray_dark</item>
		<item name="colorCardExpanded">@color/gray</item>

		<!-- Activity background -->
		<item name="android:windowBackground">?attr/colorCard</item>

		<!-- Bottom sheet dialog -->
		<item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialogTheme</item>

		<!-- Added to fix Style does not have TextAppearance attribute -->
		<!--
		<item name="colorPrimaryInverse">@color/white</item>
		<item name="colorPrimaryContainer">@color/black</item>
		<item name="colorOnPrimaryContainer">@color/white</item>
		<item name="colorSecondaryContainer">@color/black</item>
		<item name="colorOnSecondaryContainer">@color/gray</item>
		<item name="colorTertiary">@color/sky_blue</item>
		<item name="colorOnTertiary">@color/white</item>
		<item name="colorTertiaryContainer">@color/black</item>
		<item name="colorOnTertiaryContainer">@color/white</item>
		<item name="colorSurfaceVariant">@color/orange</item>
		<item name="colorOnSurfaceVariant">@color/white</item>
		<item name="colorSurfaceInverse">@color/white</item>
		<item name="colorOnSurfaceInverse">@color/black</item>
		<item name="colorOutline">@color/orange</item>
		<item name="colorErrorContainer">@color/red</item>
		<item name="colorOnErrorContainer">@color/white</item>
		-->
		<item name="textAppearanceDisplayLarge">@style/TextAppearance.Material3.DisplayLarge</item>
		<item name="textAppearanceDisplayMedium">@style/TextAppearance.Material3.DisplayMedium</item>
		<item name="textAppearanceDisplaySmall">@style/TextAppearance.Material3.DisplaySmall</item>
		<item name="textAppearanceHeadlineLarge">@style/TextAppearance.Material3.HeadlineLarge</item>
		<item name="textAppearanceHeadlineMedium">@style/TextAppearance.Material3.HeadlineMedium</item>
		<item name="textAppearanceHeadlineSmall">@style/TextAppearance.Material3.HeadlineSmall</item>
		<item name="textAppearanceTitleLarge">@style/TextAppearance.Material3.TitleLarge</item>
		<item name="textAppearanceTitleMedium">@style/TextAppearance.Material3.TitleMedium</item>
		<item name="textAppearanceTitleSmall">@style/TextAppearance.Material3.TitleSmall</item>
		<item name="textAppearanceBodyLarge">@style/TextAppearance.Material3.BodyLarge</item>
		<item name="textAppearanceBodyMedium">@style/TextAppearance.Material3.BodyMedium</item>
		<item name="textAppearanceBodySmall">@style/TextAppearance.Material3.BodySmall</item>
		<item name="textAppearanceLabelLarge">@style/TextAppearance.Material3.LabelLarge</item>
		<item name="textAppearanceLabelMedium">@style/TextAppearance.Material3.LabelMedium</item>
		<item name="textAppearanceLabelSmall">@style/TextAppearance.Material3.LabelSmall</item>
	</style>

	<!-- Declare the main app theme so that it is inheritable in version specific styles -->
	<style name="AppTheme" parent="BaseAppTheme" />

	<!-- Bottom sheet dialog -->
	<style name="CustomBottomSheetDialogTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
		<item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
	</style>

	<style name="CustomBottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
		<item name="backgroundTint">?attr/colorCardExpanded</item>
	</style>

	<!-- No action bar (largely for main activity) -->
	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<!-- Toolbar -->
	<!--
	<style name="Toolbar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
	-->
	<!--
	<style name="Toolbar" parent="@style/Widget.Material3.Toolbar">
		<item name="android:background">@color/black</item>
	</style>
	-->

	<!-- Widget base style -->
	<style name="Widget" />

	<!-- Radio button -->
	<style name="RadioGroup">
		<item name="android:layout_marginStart">@dimen/normal</item>
		<item name="android:layout_marginEnd">@dimen/normal</item>
	</style>

	<style name="RadioButton">
		<item name="android:paddingStart">@dimen/small</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
	</style>

	<!-- Button -->
	<style name="Widget.Button" parent="Widget.Material3.Button.UnelevatedButton">
		<item name="android:insetTop">@dimen/zero</item>
		<item name="android:insetBottom">@dimen/zero</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
		<item name="backgroundTint">@android:color/transparent</item>
		<item name="iconPadding">@dimen/normal</item>
		<item name="iconSize">@dimen/isz_normal</item>
		<item name="iconTint">@color/white</item>
	</style>

	<!-- Image button -->
	<style name="Widget.Button.Icon">
		<item name="android:padding">0dp</item>
		<item name="iconGravity">textStart</item>
		<item name="iconPadding">0dp</item>
	</style>

	<!-- Text button -->
	<style name="Widget.Button.Text">
		<item name="android:letterSpacing">0</item>
		<item name="android:maxLength">@integer/max_entry_length</item>
		<item name="android:textAlignment">textStart</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="Widget.Button.Text.Row">
		<item name="android:ellipsize">end</item>
		<item name="android:maxLines">1</item>
		<item name="android:paddingTop">@dimen/tiny</item>
		<item name="android:paddingBottom">@dimen/tiny</item>
		<item name="android:paddingStart">@dimen/zero</item>
		<item name="android:paddingEnd">@dimen/small</item>
	</style>

	<!-- Text view -->
	<style name="Widget.TextView">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
	</style>

	<style name="Widget.TextView.Primary">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
	</style>

	<style name="Widget.TextView.Secondary">
		<item name="android:textColor">@color/white_dull</item>
		<item name="android:textSize">@dimen/tsz_small</item>
	</style>

	<style name="Widget.TextView.Caption">
		<item name="android:textColor">@color/white_dull</item>
		<item name="android:textSize">@dimen/tsz_caption</item>
	</style>

	<style name="Widget.TextView.Summary" parent="Widget.TextView.Secondary">
		<item name="android:maxLength">@integer/max_entry_length</item>
		<item name="android:maxLines">1</item>
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Time picker -->
	<style name="Widget.TimePickerTheme" parent="BaseAppTheme">
		<item name="android:textColorPrimary">@color/white</item>
		<item name="android:textColorSecondary">@color/gray_light</item>
	</style>

	<style name="Widget.TimePickerStyle" parent="Widget.Material3.MaterialTimePicker">
		<!-- Unable to change this one programatically, otherwise, could do custom accent color -->
		<!-- <item name="android:numbersSelectorColor">@color/red</item> -->
		<item name="android:headerBackground">@color/gray_dark2</item>
		<item name="android:numbersBackgroundColor">@color/gray_dark2</item>
	</style>

	<!-- Date picker -->
	<style name="Widget.DatePickerTheme" parent="BaseAppTheme">
		<item name="android:textColorPrimary">@color/white</item>
		<item name="android:textColorSecondary">@color/gray_light</item>
	</style>

	<style name="Widget.DatePickerStyle" parent="Widget.Material3.MaterialCalendar">
		<item name="android:headerBackground">@color/gray_dark2</item>
	</style>

	<!-- Snackbar -->
	<style name="Widget.Snackbar" parent="Widget.Material3.Snackbar">
		<item name="backgroundTint">@color/gray</item>
		<item name="actionTextColorAlpha">1</item>
	</style>

	<style name="Widget.SnackbarText" parent="Widget.Material3.Snackbar.TextView">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="Widget.SnackbarButton" parent="Widget.Material3.Button.TextButton.Snackbar">
		<item name="android:textColor">?attr/colorAccent</item>
	</style>

	<!-- Tab layout -->
	<style name="My.TabLayout" parent="Widget.Material3.TabLayout">
		<item name="android:textAllCaps">true</item>
		<item name="android:textSize">@dimen/tsz_small</item>
	</style>

	<!-- NacDayButton -->
	<style name="NacDayButton">
		<item name="nacWidth">@dimen/isz_large</item>
		<item name="nacHeight">@dimen/isz_large</item>
	</style>

	<!-- NacColorPicker -->
	<style name="NacColorPicker">
		<item name="nacSpacing">?dialogPreferredPadding</item>
	</style>

	<!-- Separator -->
	<style name="Widget.General.Separator" parent="">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/line</item>
		<item name="android:alpha">0.3</item>
		<item name="android:background">@color/white</item>
	</style>

</resources>
