<resources>

	<!-- Base application theme. -->
	<!--
	<style name="AppTheme" parent="Theme.AppCompat">
	-->
	<style name="AppTheme" parent="Theme.MaterialComponents">
		<item name="colorAccent">@color/orange</item>
		<item name="colorError">@color/red</item>
		<item name="colorOnPrimary">@color/white</item>
		<item name="colorOnSecondary">@color/black</item>
		<item name="colorOnBackground">@color/white</item>
		<item name="colorOnSurface">@color/white</item>
		<item name="colorOnError">@color/white</item>

		<!--
		This was not working for some reason
		<item name="chipStyle">@style/Widget.TimePickerChipStyle</item>
		<item name="materialClockStyle">@style/Widget.TimePickerClockStyle</item>
		-->


		<item name="android:timePickerDialogTheme">@style/Widget.TimePickerTheme</item>
		<item name="snackbarStyle">@style/Widget.Snackbar</item>
		<item name="snackbarTextViewStyle">@style/Widget.SnackbarText</item>
		<item name="snackbarButtonStyle">@style/Widget.SnackbarButton</item>

		<item name="colorCard">@color/gray_dark</item>
		<item name="colorCardExpanded">@color/gray</item>
	</style>


	<!-- No action bar (largely for main activity) -->
	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>


	<!-- Toolbar -->
	<style name="Toolbar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
		<item name="android:background">@color/black</item>
	</style>

	<!-- Widget base style -->
	<style name="Widget">
	</style>


	<!-- Radio button -->
	<style name="RadioGroup">
		<item name="android:layout_marginStart">@dimen/normal</item>
		<item name="android:layout_marginEnd">@dimen/normal</item>
	</style>

	<style name="RadioButton">
		<item name="android:paddingStart">@dimen/small</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
	</style>


	<!-- Button -->
	<style name="Widget.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
		<item name="android:insetTop">@dimen/zero</item>
		<item name="android:insetBottom">@dimen/zero</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
		<item name="backgroundTint">@android:color/transparent</item>
		<item name="iconPadding">@dimen/normal</item>
		<item name="iconSize">@dimen/isz_normal</item>
		<item name="iconTint">@color/white</item>
	</style>


	<!-- Image button -->
	<style name="Widget.Button.Icon">
		<item name="android:padding">0dp</item>
		<item name="iconGravity">textStart</item>
		<item name="iconPadding">0dp</item>
	</style>


	<!-- Text button -->
	<style name="Widget.Button.Text">
		<item name="android:letterSpacing">0</item>
		<item name="android:maxLength">@integer/max_entry_length</item>
		<item name="android:textAlignment">textStart</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="Widget.Button.Text.Row">
		<item name="android:ellipsize">end</item>
		<item name="android:maxLines">1</item>
		<item name="android:paddingTop">@dimen/tiny</item>
		<item name="android:paddingBottom">@dimen/tiny</item>
		<item name="android:paddingStart">@dimen/zero</item>
		<item name="android:paddingEnd">@dimen/small</item>
	</style>


	<!-- Text view -->
	<style name="Widget.TextView">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
	</style>

	<style name="Widget.TextView.Primary">
		<!-- <item name="android:textColor">?android:attr/textColorPrimary</item> -->
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
	</style>

	<style name="Widget.TextView.Secondary">
		<!-- <item name="android:textColor">?android:attr/textColorSecondary</item> -->
		<item name="android:textColor">@color/white_dull</item>
		<item name="android:textSize">@dimen/tsz_small</item>
	</style>

	<style name="Widget.TextView.Caption">
		<!-- <item name="android:textColor">?android:attr/textColorSecondary</item> -->
		<item name="android:textColor">@color/white_dull</item>
		<item name="android:textSize">@dimen/tsz_caption</item>
	</style>

	<style name="Widget.TextView.Summary" parent="Widget.TextView.Secondary">
		<item name="android:maxLength">@integer/max_entry_length</item>
		<item name="android:maxLines">1</item>
		<item name="android:textStyle">bold</item>
	</style>


	<!-- Time picker dialog -->
	<!--
	<style name="Widget.TimePickerChipStyle" parent="Widget.MaterialComponents.TimePicker.Display">
		<item name="android:textColor">@color/red</item>
	</style>

  <style name="Widget.TimePickerClockStyle" parent="Widget.MaterialComponents.TimePicker.Clock">
    <item name="clockFaceBackgroundColor">@color/red</item>
    <item name="clockHandColor">@color/green</item>
    <item name="clockNumberTextColor">@color/sky_blue</item>
  </style>
  -->

	<!--
	<style name="Widget.TimePickerClockStyle" parent="Widget.MaterialComponents.TimePicker.Clock">
		<item name="clockFaceBackgroundColor">@color/red</item>
		<item name="clockHandColor">@color/red</item>
		<item name="clockNumberTextColor">@color/red</item>
	</style>
	-->

	<style name="Widget.TimePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
		<!--
		<item name="clockFaceBackgroundColor">?attr/colorAccent</item>
		<item name="android:headerBackground">@color/gray</item>
		<item name="android:numbersBackgroundColor">@color/gray</item>
		<item name="android:numbersSelectorColor">?attr/colorAccent</item>
		<item name="android:background">@color/gray_dark</item>


		<item name="android:textColorPrimary">@color/green</item>
		<item name="android:textColorSecondary">@color/red</item>
		-->

		<item name="android:textColorPrimary">@color/white_dull</item>
		<item name="android:textColorSecondary">@color/gray_light</item>
		<item name="colorAccent">@color/orange</item>
		<item name="colorPrimary">?attr/colorAccent</item>


		<!--
		<item name="colorOnPrimary">?attr/colorAccent</item>
		<item name="colorOnSecondary">@color/green</item>
		<item name="colorOnBackground">@color/sky_blue</item>
		<item name="colorOnSurface">@color/red</item>
		<item name="colorControlActivated">@color/black</item>

		<item name="colorError">@color/red</item>
		<item name="colorOnPrimary">@color/white</item>
		<item name="colorOnSecondary">@color/black</item>
		<item name="colorOnBackground">@color/white</item>
		<item name="colorOnSurface">@color/white</item>
		<item name="colorOnError">@color/white</item>
		-->

		<item name="android:timePickerStyle">@style/Widget.TimePickerStyle</item>
	</style>

	<style name="Widget.TimePickerStyle" parent="@android:style/Widget.Material.TimePicker">
		<item name="android:headerBackground">@color/gray_dark2</item>
		<item name="android:numbersBackgroundColor">@color/gray_dark2</item>
		<item name="android:numbersSelectorColor">?attr/colorAccent</item>
		<item name="android:numbersTextColor">@color/white</item>
		<item name="android:background">@color/gray_dark</item>
	</style>


	<!-- Snackbar -->
	<style name="Widget.Snackbar" parent="Widget.MaterialComponents.Snackbar">
		<item name="backgroundTint">@color/gray</item>
		<item name="actionTextColorAlpha">1</item>
	</style>

	<style name="Widget.SnackbarText" parent="Widget.MaterialComponents.Snackbar.TextView">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="Widget.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
		<item name="android:textColor">?attr/colorAccent</item>
	</style>


	<!-- NacDayButton -->
	<style name="NacDayButton">
		<item name="nacWidth">@dimen/isz_large</item>
		<item name="nacHeight">@dimen/isz_large</item>
	</style>


	<!-- NacColorPicker -->
	<style name="NacColorPicker">
		<item name="nacSpacing">?dialogPreferredPadding</item>
	</style>

</resources>
