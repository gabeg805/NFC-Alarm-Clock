<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Section -->
	<style name="Widget.AlarmOptionDialog.Section" parent="">
		<item name="android:paddingTop">@dimen/tiny</item>
		<item name="android:paddingBottom">@dimen/normal</item>
	</style>

	<!-- Title -->
	<style name="Widget.AlarmOptionDialog.Title" parent="">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_medium</item>
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Description -->
	<style name="Widget.AlarmOptionDialog.Description" parent="Widget.TextView.Secondary">
		<item name="android:paddingBottom">@dimen/small</item>
	</style>

	<!-- Description before a checkbox -->
	<style name="Widget.AlarmOptionDialog.DescriptionBeforeCheckBox" parent="Widget.TextView.Secondary">
		<item name="android:paddingBottom">@dimen/tiny</item>
	</style>

	<!-- Separator -->
	<style name="Widget.AlarmOptionDialog.Separator" parent="">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/tiny</item>
	</style>

	<!-- Separator after a checkbox-->
	<style name="Widget.AlarmOptionDialog.SeparatorAfterCheckBox" parent="Widget.AlarmOptionDialog.Separator">
		<item name="android:layout_height">@dimen/medium</item>
	</style>

	<!-- Button -->
	<style name="Widget.AlarmOptionDialog.Button" parent="">
		<item name="android:layout_height">@dimen/touch</item>
		<item name="android:layout_marginStart">@dimen/large</item>
		<item name="android:layout_marginEnd">@dimen/large</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_small</item>
		<item name="backgroundTint">@color/gray_light</item>
	</style>

	<!-- Checkbox -->
	<style name="Widget.AlarmOptionDialog.CheckBox" parent="">
		<item name="android:layout_marginStart">@dimen/small</item>
		<item name="android:layout_marginEnd">@dimen/small</item>
	</style>

	<!-- Slider -->
	<style name="Widget.AlarmOptionDialog.Slider" parent="">
		<item name="android:layout_marginBottom">@dimen/small</item>
	</style>

	<!-- Dropdown -->
	<style name="Widget.AlarmOptionDialog.Dropdown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
		<item name="boxCornerRadiusTopStart">10dp</item>
		<item name="boxCornerRadiusTopEnd">10dp</item>
		<item name="boxCornerRadiusBottomStart">10dp</item>
		<item name="boxCornerRadiusBottomEnd">10dp</item>
		<item name="boxStrokeWidth">@dimen/twoline</item>
	</style>

	<!-- Dropdown row -->
	<style name="Widget.AlarmOptionDialog.DropdownRow" parent="Widget.AlarmOptionDialog.Dropdown">
		<item name="android:paddingBottom">@dimen/large</item>
	</style>

	<!-- Regular row -->
	<style name="Widget.AlarmOptionDialog.Row" parent="">
		<item name="android:paddingBottom">@dimen/large</item>
	</style>

</resources>